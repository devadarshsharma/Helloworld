<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="7dp"
    android:padding="5dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/RecycleShowAlarm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timeAlarm"
            android:text="8:00 AM"
            android:padding="5dp"
            android:textSize="25sp"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/whitechecks"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/whitecheck"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/greenripple"/>
                <ImageView
                    android:id="@+id/cancels"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_cancel"
                    android:layout_marginLeft="8dp"/>
                <ImageView
                    android:id="@+id/skipped"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/skipped"
                    android:layout_marginLeft="8dp"/>
                <ImageView
                    android:id="@+id/snooze"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_snooze"
                    android:layout_marginLeft="8dp"/>
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/pills"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/img1"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <TextView
                    android:id="@+id/medanme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:01 AM"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tabletsrecycleview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Tablet(s)"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/skippedtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Tablet(s)"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/Description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>